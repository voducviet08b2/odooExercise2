<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="Sudoku" owl="1">
        <div class="body">
            <div class="menu-title">
                <Header error="state.error" />
            </div>
            <div class="body-main d-flex">
                <div class="display-board">
                    <t t-set="index_x" t-value="0" />
                    <t t-foreach="board" t-as="row">
                        <t t-set="index_y" t-value="0" />
                        <t t-foreach="row" t-as="cell_content">
                            <CellSudoku x="index_x" y="index_y" value="cell_content"
                                isSelected="checkSelected(index_x, index_y)"
                                isAroundCell="isAroundCell(index_x, index_y)"
                                isCellRight="isCellRight(index_x, index_y)"
                                isCellBottom="isCellBottom(index_x, index_y)"
                                isCellTop="isCellTop(index_x, index_y)"
                                isCellLeft="isCellLeft(index_x, index_y)"
                                onSelect="(x,y) => handleSelect(x,y)"
                                selectingX="state.selectingX"
                                selectingY="state.selectingY"
                                isCellHighlighted="isCellHighlighted(index_x, index_y)"
                            />
                            <t t-set="index_y" t-value="index_y + 1" />
                        </t>
                        <t t-set="index_x" t-value="index_x + 1" />
                    </t>
                </div>
                <div class="body-player">
                    <DisplayNumber onSelect="(value) => selectNumber(value)" removeCellValue="() => removeCellValue()"  undoMove="() => undoMove()" />
                </div>
            </div>
        </div>
    </t>

</templates>