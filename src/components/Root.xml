<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="Sudoku" owl="1">
        <div class="body">
            <div class="menu-title">
                <MenuTitle error="state.error" />
            </div>
            <div class="body-main d-flex">
                <div class="display-board">
                    <t t-set="index_x" t-value="0" />
                    <t t-foreach="board" t-as="row">
                        <t t-set="index_y" t-value="0" />
                        <t t-foreach="row" t-as="cell">
                            <CellSudoku x="index_x" y="index_y" value="cell"
                                isSelected="checkSelected(index_x, index_y)"
                                isAroundCell="dispatch('checkAroundSelected', {x: index_x, y: index_y})"
                                isCellRight="dispatch('checkCellRight', {x: index_x, y: index_y})"
                                isCellBottom="dispatch('checkCellBottom', {x: index_x, y: index_y})"
                                isCellTop="dispatch('checkCellTop', {x: index_x, y: index_y})"
                                isCellLeft="dispatch('checkCellLeft', {x: index_x, y: index_y})"
                                fixedCell="state.fixedCell"
                                onSelect="(x,y) => handleSelect(x,y)"
                                selectingX="state.selectingX"
                                selectingY="state.selectingY"
                                isHighlightCell="dispatch('checkHighlightCell', {x: index_x, y: index_y, selectingX: state.selectingX, selectingY: state.selectingY})"
                            />
                            <t t-set="index_y" t-value="index_y + 1" />
                        </t>
                        <t t-set="index_x" t-value="index_x + 1" />
                    </t>
                </div>
                <div class="body-player">
                    <PlayerSudoku onSelect="(value) => selectNumber(value)" removeCellValue="() => removeCellValue()"  undoMove="() => undoMove()" />
                </div>
            </div>
        </div>
    </t>

</templates>